<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/welcome_image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Welcome Image" />

    <TextView
        android:id="@+id/welcome_text1"
        android:text="Start to detect your Dog's approximate Steps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/welcome_text11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get an idea of how many steps your dog walks per day"
        />

</LinearLayout>