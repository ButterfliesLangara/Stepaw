<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authentication_nav"
    app:startDestination="@id/signin">

    <fragment
        android:id="@+id/signin"
        android:name="com.butterflies.stepaw.authentication.Signin"
        android:label="fragment_signin"
        tools:layout="@layout/fragment_signin" >
        <action
            android:id="@+id/action_signin_to_signup"
            app:destination="@id/signup_fragment" />
    </fragment>
    <fragment
        android:id="@+id/signup_fragment"
        android:name="com.butterflies.stepaw.authentication.Signup"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signup_to_password_reset"
            app:destination="@id/password_reset_fragment" />
    </fragment>
    <fragment
        android:id="@+id/password_reset_fragment"
        android:name="com.butterflies.stepaw.authentication.PasswordReset"
        android:label="fragment_password_reset"
        tools:layout="@layout/fragment_password_reset" />
</navigation>